{% extends 'base.html.twig' %}

{% block title %}{{ 'Product'|trans }}{% endblock %}

{% block bread %}
    â†’ {{ 'Products'|trans }}
{% endblock %}

{% block body %}
    <div class="bg-white border rounded shadow mb-2">
        <div class="p-3">
            {% if categories|length > 0 %}
            <a href="{{ path('app_product_add') }}">
            <i class="fas fa-plus fa-fw mr-3 text-green-600"></i><span class="pb-1 md:pb-0 text-sm">{{ 'Add Product'|trans }}</span>
            </a>
            {% else %}
            <div class="pb-2 text-red-600">
                {{ 'There is no category. Please create a category first.'|trans }}
            </div>
            <div>
                <a href="{{ path('app_category_add') }}">
                    <i class="fas fa-plus fa-fw mr-3 text-red-600"></i><span class="pb-1 md:pb-0 text-sm">{{ 'Add Category'|trans }}</span>
                </a>
            </div>
            {% endif %}
        </div>
    </div>
    <div class="w-full">
        <!--Table Card-->
        <div class="bg-white border rounded shadow">
            <div class="border-b p-3">
                <h5 class="font-bold uppercase text-gray-600">{{ 'Products'|trans }}</h5>
            </div>
            <div class="p-4">
                {% if products|length > 0 %}
                <div class="flex flex-col">
                    <div class="-m-1.5 overflow-x-auto">
                        <div class="p-1.5 min-w-full inline-block align-middle">
                            <div class="overflow-hidden">
                                <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-700">
                                    <thead>
                                    <tr>
                                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">{{ 'Name'|trans }}</th>
                                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">{{ 'Quantity'|trans }}</th>
                                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">{{ 'Quantity per Piece'|trans }}</th>
                                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">{{ 'Unit'|trans }}</th>
                                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">{{ 'Category'|trans }}</th>
                                    </tr>
                                    </thead>

                                    <tbody>
                                    {% for product in products %}
                                    <tr class="odd:bg-white even:bg-gray-100 hover:bg-gray-300">
                                        <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-800"><a href="{{ path('app_product_edit', { product: product.id }) }}">{{ product.name }}</a></td>
                                        <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-800">{{ product.quantity }}</td>
                                        <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-800">{{ product.quantityPerPiece }}</td>
                                        <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-800">{{ product.packagingType }}</td>
                                        <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-800">{{ product.category.name }}</td>
                                    </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
                {% else %}
                    <div class="text-center">
                        {{ 'No products.'|trans }}
                    </div>
                {% endif %}
            </div>
        </div>
        <!--/table Card-->
    </div>
{% endblock %}
